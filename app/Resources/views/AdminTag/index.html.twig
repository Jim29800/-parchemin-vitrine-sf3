{% extends 'base.html.twig' %}
{% block title %}Admin - Liste des tags{% endblock %}

{% block body %}
    <h1>Gestion des tags</h1>
<section id="tag-list">
    <div class="row list">
        {% for tag in tags %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <h5 class="card-title name">{{ tag.name }}</h5>
                        <a class="btn btn-sm btn-outline-primary" href="{{ path('tag_products', { 'uuid': tag.uuid }) }}">Voir les produits</a>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-warning" href="{{ path('admin_tag_edit', { 'uuid': tag.uuid }) }}">Editer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <ul class="list-unstyled inline-list">
        <li class="list-inline-item">
            <button type="button" class="jPaginateBack btn btn-outline-primary">Précédent</button>
        </li>
        <li class="list-inline-item">
            <ul class="pagination"></ul>
        </li>
        <li class="list-inline-item">
            <button type="button" class="jPaginateNext btn btn-outline-primary">Suivant</button>
        </li>
        <li class="list-inline-item">
            <input class="search form-control" placeholder="Rechercher">
        </li>
    </ul>
</section>


    <a class="btn btn-primary" href="{{ path('admin_tag_new') }}">Ajouter un nouveau tag</a>


{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/adminTag.js') }}"></script>
{% endblock %}