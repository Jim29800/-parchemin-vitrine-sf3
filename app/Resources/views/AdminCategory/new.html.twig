{% extends 'base.html.twig' %}
{% block title %}Admin - Création d'une catégorie{% endblock %}

{% block body %}
    <h1>Ajout d'une nouvelle catégorie</h1>
    {{ form_start(form) }}
    <div class="d-flex justify-content-between">
        <input class="btn btn-primary" type="submit" value="Enregistrer" />
        <a class="btn btn-danger" href="{{ path('admin_categories_index') }}">Abandonner</a>
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold">{{ form_errors(form.name) }}</span>
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
