{% extends 'base.html.twig' %}
{% block title %}Admin - Liste des catégories{% endblock %}

{% block body %}
    <h1>Gestion des catégories</h1>

    <div class="row">
        {% for category in categories %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <a class="btn btn-sm btn-outline-primary" href="{{ '/category/' ~ category.uuid }}">Voir les produits</a>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-warning" href="{{ path('admin_categories_edit', { 'uuid': category.uuid }) }}">Editer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
            <a class="btn btn-primary" href="{{ path('admin_categories_new') }}">Ajouter une nouvelle catégorie</a>

{% endblock %}
