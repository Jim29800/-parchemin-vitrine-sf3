{% extends 'base.html.twig' %}
{% block title %}Admin - Edition d'une catégorie{% endblock %}
{% block body %}
    <h1>Edition de la catégorie : {{ category.name}} </h1>

    {{ form_start(form) }}
    <div class="d-flex justify-content-between">
        <input class="btn btn-primary" type="submit" value="Enregistrer" />
        <a class="btn btn-danger" href="{{ path('admin_categories_index') }}">Abandonner</a>
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold">{{ form_errors(form.name) }}</span>
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
    </div>
    {{ form_end(form) }}


            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
                <p class="text-danger">* Pour pouvoir pouvoir supprimer une catégorie, il faut qu'aucun produit ne lui soit associé.</p>
            {{ form_end(delete_form) }}

{% endblock %}
