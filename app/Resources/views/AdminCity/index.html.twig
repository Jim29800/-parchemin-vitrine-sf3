{% extends 'base.html.twig' %}
{% block title %}Admin - Liste des villes{% endblock %}

{% block body %}
    <h1>Gestion des villes</h1>
    <div class="row">
        {% for city in cities %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card h-100 text-center">
                    <div class="card-header">
                        <h5 class="card-title">{{ city.name }}</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Adresse</h5>
                        <p class="card-text">{{ city.address }}</p>
                        <h5 class="card-title">Message de contact</h5>
                        <p class="card-text">{{ city.contactMessage }}</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-warning" href="{{ path('admin_city_edit', { 'id': city.id }) }}">Editer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="btn btn-primary" href="{{ path('admin_city_new') }}">Ajouter une nouvelle ville</a>
{% endblock %}
