{% extends 'base.html.twig' %}
{% block title %}Admin - Cr√©ation d'un produit{% endblock %}
{% block body %}
    <h1>Mise en ligne d'un produit</h1>

    {{ form_start(form) }}
    <div class="d-flex justify-content-between">
        <input class="btn btn-primary" type="submit" value="Mettre en ligne" />
        <a class="btn btn-danger" href="{{ path('admin_product_created') }}">Abandonner</a>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-8 mb-2">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="col-md-4 mb-2">
                {{ form_label(form.ref) }}
                {{ form_widget(form.ref) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                {{ form_label(form.category) }}
                {{ form_widget(form.category) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_label(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_label(form.autoDeleteAt) }}
                {{ form_widget(form.autoDeleteAt) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
    </div>
    <div class="form-group">
        {{ form_label(form.tags) }}
        {% for tag in form.tags|batch(10) %}
            <div class="form-group">
                {% for option in tag %}
                    <div class="form-check form-check-inline">    
                        {{ form_widget(option) }}
                        {{ form_label(option, null, {
                            'label_attr': {'class': 'form-check-label'} }) 
                        }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    <div class="form-group">
        {{ form_widget(form.imageFile) }}
    </div>
    <img id="imagepreview" src="{{ asset("aucun_apercu.png") }}" class="register_avatar" alt="your image" />
    {{ form_end(form) }}



{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/adminNewProduct.js') }}"></script>
{% endblock %}