{% if is_granted("ROLE_USER") %}
    {% set mainMenu = [
    {'path': 'index', 'name': 'Home' },
    {'path': 'security_logout','name': 'logout'}
    ] %}
{% else %}
    {% set mainMenu = [
    {'path': 'index', 'name': 'Home' },
    {'path': 'security_login', 'name': 'Login' }
    ] %}
{% endif %}
<nav class="navbar navbar-expand-lg navbar-light nav-bg-color">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            {% for category in categories %}
                <li {{ currentUrl == '/category/' ~ category.id ? ' class="nav-item active"' : 'class="nav-item"' }}>
                    <a class="nav-link nav-color" href="{{ '/category/' ~ category.id }}">{{ category.name }}</a>
                </li>
            {% endfor %}
        </ul>
        <ul class="navbar-nav">
            {% for item in mainMenu %}
            <li currentUrl == item['path'] ? ' class="nav-item active"' : 'class="nav-item"' }}>
                <a class="nav-link" href="{{ path(item['path']) }}">{{ item['name'] }}</a>
            </li>
            {% endfor %}
        </ul>
    </div>
</nav>
